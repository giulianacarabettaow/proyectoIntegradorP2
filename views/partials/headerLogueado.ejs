<!DOCTYPE html>
<html lang="es">
<body>
	<!-- Header -->
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/logoChoza.png">
					</a>
				</div>
	
				<div class="col-7 col-md-6">
					<form action="/products/search-results" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Todas las opiniones en un solo lugar.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
	
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
					<li><a href="/products/add">Cargar productos</a></li>
				</ul>
	
				<ul class="right-navbar">
					<!-- <p>Bienvenid@ <%#= locals.userLogged.nombre %>!</p> -->
					<%# if (locals.user != undefined) { %>
						<!-- <p>Hola <%#= locals.user.nombre%>!</p> -->
					<%# } %>
					<li><a href="/users/profile<%#= locals.user.id %>">
							Mi Perfil <i class="fas fa-user"></i>
						</a>
					</li>
					<li>		
						<form action="/users/login" method="POST"> <!-- Si le pongo el METHOD="GET", SÍ ANDA EL LINK A USERS/LOGIN-->
							<button class="logout" type="submit">
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							</button>
						</form>
					</li>
				</ul>
			</nav>
		</div>
	</header>
	<!-- /Header -->
	
</body>	
</html>