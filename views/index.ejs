<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %>
  <body>
    <% if (locals.user!= undefined){ %>
    <%- include('./partials/headerLogueado') %> 
    <% }else { %>
    <%- include('./partials/header') %> 
    <% } %> 
    <!-- Banner -->
    <div class="banner">
      <img
        src="/images/BannerDescuentos.jpg"
        alt="Banner de descuentos"
      />
    </div>
    <!-- /Banner -->

    <!-- Novedades -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Novedades</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <% for(let i = 0; i < 8; i++) { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/id/<%= listaProducts[i].id %>">
              <figure class="product-box_image">
                <img
                  src="/images/products/<%=listaProducts[i].imagen %>"
                  alt="<%= listaProducts[i].nombre %>"
                />
              </figure>
              <article class="product-box_data">
                <h2><%= listaProducts[i].nombre %></h2>
                <p><%= listaProducts[i].descripcion %></p>
                <p>Comentarios: <%= listaProducts[i].comentarios.length %></p>
              </article>
            </a>
          </section>
        </div>
        <% } %>
      </div>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>


   