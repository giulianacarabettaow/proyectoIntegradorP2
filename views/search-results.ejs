<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>
<body>
	<%- include('./partials/header') %>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<h2 class="col-12"> </h2>
			<div class="container products-wrapper">
				<div class="row">
					
					<% for (let i = 0; i < 8; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/id/<%= products[i].id %>">
								<figure class="product-box_image">
									<img src="<%= products[i].imagen %>" alt="<%= products[i].nombre %>">
								</figure>
								<article class="product-box_data">
									<h2><%= products[i].nombre %></h2>
									<p><%= products[i].descripcion %></p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
				</div>
			</div>

	<%- include('./partials/footer') %>
</body>

</html>