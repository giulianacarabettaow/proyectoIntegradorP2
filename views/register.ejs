<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

<body>
	<%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
				<article >
					<form method="POST" action="/users/profile"> <!--usamos POST porque es el método HTTP para guardar datos-->
						
						
						<label class="form-label">Email</label>
						<input type="email" name="email" placeholder="pepito@example.com" class="form-input">
					
						
						<label class="form-label">Fecha de Nacimiento</label>
						<input type="date" name="fechaNacimiento" class="form-input">
						

						
						<label class="form-label">Número de documento</label>
						<input type="number" name="dni" class="form-input">
						

						
						<label class="form-label">Nombre de usuario:</label>
						<input type="text" name="username" placeholder="pepito@example.com" class="form-input">
						

						
						<label class="form-label">Contraseña:</label>
						<input type="password" name="password" placeholder="" class="form-input">
						
						
						
						<label class="form-label">Foto de perfil:</label>
						<input type="text"  name="fotoPerfil" class="form-input">
						
						
						<button type="submit" class="form-input"> Crear perfil</button>
					</form>
				</article>
			</div>
			<!-- Show the "ultimos" products -->
			


	<%- include('./partials/footer') %>
</body>

</html>