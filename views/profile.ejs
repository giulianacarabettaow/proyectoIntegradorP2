<!DOCTYPE html>
<html lang="es">
	<%- include('./partials/head') %>
<body>
	<% if (locals.user!= undefined){ %>
		<%- include('./partials/headerLogueado') %> 
		<% }else { %>
		<%- include('./partials/header') %> 
		<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= infoUsuario.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div> 
			<div class="info-usuario">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= infoUsuario.nombre %>
					</h1>
					<a class="form-input-dos" href="">Seguir</a>
					<a class="form-input-dos" href="/users/profileEdit/<%=infoUsuario.id%>"> Editar perfil </a>
				</div>
				<div>
					<ul>
						<li><%= infoUsuario.email%></li> 
						<li><%= infoUsuario.fechaDeNacimiento%></li>
						<li>Productos: <%= infoUsuario.productos.length%></li>
						<li>200 seguidores</li>
						<li>Comentarios: <%= infoUsuario.comentarios.length%></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<% if (infoUsuario.productos.length != 0){%>
	<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for (let i = 0; i < infoProd.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%= infoProd[i].id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%= infoProd[i].imagen %>" alt="<%= infoProd[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= infoProd[i].nombre %></h2>
								<p><%= infoProd[i].descripcion %></p>
								<p>Comentarios: <%= infoProd[i].comentarios.length%></p> 
							</article>
						</a>
					</section>
				</div>
				<% } %>
			</div>
		</div>
	<%}%>
	<!-- /Mis productos -->


	<%- include('./partials/footer') %>
</body>	
</html>