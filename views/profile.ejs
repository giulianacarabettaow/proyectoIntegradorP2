<!DOCTYPE html>
<html lang="es">
	<%- include('./partials/head') %>
<body>
	<%- include('./partials/headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= infoUsuario.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div> 
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= infoUsuario.nombre %>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= infoUsuario.email%></li>
						<li><%= infoUsuario.fechaDeNacimiento%></li>
						<li><%= infoUsuario.productos.length%>></li>
						<li>200 seguidores</li>
						<li><%= infoUsuario.comentarios.length%></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<% if (infoUsuario.productos.length != 0){%>
	<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for (let i = 0; i < infoUsuario.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%= infoUsuario.productos %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= infoUsuario.productos.imagen %>" alt="<%= infoUsuario.productos[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= infoUsuario.productos.nombre %></h2>
								<p><%= infoUsuario.productos.descripcion %></p>
								<p>Comentarios: <%= infoUsuario.productos[i].comentarios.length%></p> 
							</article>
						</a>
					</section>
				</div>
				<% } %>
			</div>
		</div>
	<%}%>
	<!-- /Mis productos -->


	<%- include('./partials/footer') %>
</body>	
</html>